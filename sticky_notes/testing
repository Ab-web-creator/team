		<button onclick="displayOption('Option 1')">Option 1</button>
		<button onclick="displayOption('Option 2')">Option 2</button>
		<button onclick="displayOption('Option 3')">Option 3</button>
	</div>
	<h2>Selected Option:</h2>
	<p id="selected-option"></p>


  <script>
    function displayOption(option) {
      document.getElementById("selected-option").innerHTML = option;
    }

  </script>
